<mvc:View controllerName="ecu.controller.NewApp" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
    xmlns:tnt="sap.tnt" 
    xmlns:layout="sap.ui.layout">
    <App id="newapp">
        <pages>
            <Page id="page" showHeader="false">
                <content>
                    <tnt:ToolHeader>
                        <ToolbarSpacer/>
                        <Image src="./resources/images/eurocash_logo.png" width="160px" height="30px" press="onNavToMainPage" />
                        <ToolbarSpacer/>
                        <Button text="onDetails" press="onNavToDetails" />
                    </tnt:ToolHeader>
                    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Raporty" subheader="Informacje" press="naviToReports">
                        <tileContent>
                            <TileContent footer=" Jakis footer">
                                <content>
                                    <ImageContent src="sap-icon://business-objects-experience"/>
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="C level / Managers" subheader="Dane" state="Loaded" backgroundImage="https://itlever.files.wordpress.com/2011/02/managers.jpg">
                        <tileContent>
                            <TileContent footer="Jakis footer">
                                <content>
                                    <NumericContent scale="$" value="2.1" valueColor="Good" indicator="Up" />
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    <SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
                        <tiles>
                            <GenericTile backgroundImage="http://www.foodtrucktalk.com/wp-content/uploads/yumbii-food-450x220.jpg" frameType="TwoByOne" state="Loaded" press="onCorpoPress">
                                <tileContent>
                                    <TileContent footer="Korpo">
                                        <content>
                                            <NewsContent contentText="[Pan kanapka przyjechal]" subheader="Burger"></NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile backgroundImage="http://i.imgur.com/e7wg8Ek.jpg" frameType="TwoByOne" state="Loaded" press="onCorpoPress">
                                <tileContent>
                                    <TileContent footer="Korpo">
                                        <content>
                                            <NewsContent contentText="Sala konferencyjna - rezerwacja" subheader="Czw. 13:00"></NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile backgroundImage="http://i.imgur.com/e7wg8Ek.jpg" frameType="TwoByOne" state="Loaded" press="onCorpoPress">
                                <tileContent>
                                    <TileContent footer="Korpo">
                                        <content>
                                            <NewsContent contentText="Sala konferencyjna - zajÄ™ta" subheader="13:00 - 15:00"></NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                        </tiles>
                    </SlideTile>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>